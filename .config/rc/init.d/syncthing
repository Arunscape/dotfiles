#!/sbin/openrc-run

description="Arun's $RC_SVCNAME instance with podman"
run_path="${XDG_RUNTIME_DIR}/podman"
log_path="${run_path}/log"
pidfile="${run_path}/${RC_SVCNAME}.pid"
output_log="${log_path}/${RC_SVCNAME}.log"
error_log=$output_log
command=podman
command_args="run
              --pidfile $pidfile
              --name $RC_SVCNAME
              -e PUID=0
              -e PGID=0
              -p $web_port:8384
              -p 22000:22000/tcp
              -p 22000:22000/udp
              -p 21027:21027/udp
              -v $config_path:/var/syncthing
              -v "$obsidian_vault_path:/var/syncthing/obsidian-vault"
              -v $camera_backup_path:/var/syncthing/camera_backup
              --replace
              --userns keep-id
              $container_url
             "
command_background=true
supervisor=supervise-daemon

depend() {
    use podman
}

start_pre(){
  checkpath -o $USER -d "${run_path}" "${log_path}"

  ebegin "Pulling $container_url"
  podman pull $container_url
  eend $? "Failed to pull $container_url"
}

stop_post(){
  ebegin "Stopping $RC_SVCNAME"
  podman stop $RC_SVCNAME
  eend $? "Failed to stop $RC_SVCNAME"
}
